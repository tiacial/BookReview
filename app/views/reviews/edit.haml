%div.col-md-6.col-md-offset-3
  %div.new-book-form
    %h1 Edit Review

    = simple_form_for([@book, @review]) do |f|
      %div{:id => "rating-form"}
        %label Rating

      = f.input :comment
      = f.button :submit, :class => "btn-custom2"

:javascript
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });